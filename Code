// Define the pins for the LEDs and joystick
const int RED_LED = 5;
const int YELLOW_LED = 4;
const int GREEN_LED = 2;
const int JOYSTICK_X = A0;
const int JOYSTICK_Y = A1;


void setup() {
  // Initialize the LED pins as outputs
  pinMode(RED_LED, OUTPUT);
  pinMode(YELLOW_LED, OUTPUT);
  pinMode(GREEN_LED, OUTPUT);
 
  // You can also start serial communication for debugging
  // Serial.begin(9600);
}


void loop() {
  // Read the analog values from the joystick
  int xValue = analogRead(JOYSTICK_X);
  int yValue = analogRead(JOYSTICK_Y);


  // Read the state of the joystick to control the lights
  // The exact values might need to be adjusted based on your joystick
  if (yValue < 400) { // Joystick moved down
    // Turn on the red light
    digitalWrite(RED_LED, HIGH);
    digitalWrite(YELLOW_LED, LOW);
    digitalWrite(GREEN_LED, LOW);
  } else if (yValue > 600) { // Joystick moved up
    // Turn on the green light
    digitalWrite(GREEN_LED, HIGH);
    digitalWrite(RED_LED, LOW);
    digitalWrite(YELLOW_LED, LOW);
  } else if (xValue < 400) { // Joystick moved left
    // Turn on the yellow light
    digitalWrite(YELLOW_LED, HIGH);
    digitalWrite(RED_LED, LOW);
    digitalWrite(GREEN_LED, LOW);
  } else { // Joystick in the center or moved right
    // Turn all lights off or turn on another light (e.g., green)
    digitalWrite(RED_LED, LOW);
    digitalWrite(YELLOW_LED, LOW);
    digitalWrite(GREEN_LED, LOW);
    // You can also add an action for
  }}
